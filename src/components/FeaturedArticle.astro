---
import { featuredArticle } from '../lib/list';
import { dateFormat } from '../lib/date-format.helper';
import { timeToRead } from '../lib/reading-time';
---
<div class="my-16 mx-auto">
    <div class="grid lg:grid-cols-2 gap-8 items-center">
        <div>
            <h2 class="text-2xl md:text-3xl mb-6 font-display text-balance">{featuredArticle.data.title}</h2>
            <div class="space-y-2 text-sm"><p>By {featuredArticle.data.author}</p>
                <p>{dateFormat(featuredArticle.data.released)} â€¢ {timeToRead(featuredArticle)} min read</p></div>
            <div class="mt-8">
                <a href={featuredArticle.id}
                   class="inline-flex items-center justify-center whitespace-nowrap font-medium transition-colors
                   h-10 bg-zag-dark dark:bg-white text-white dark:text-black
                   border-2 border-zag-dark dark:border-white hover:bg-white dark:hover:bg-zag-dark hover:text-black dark:hover:text-white text-sm py-2 px-4">
                    READ ARTICLE
                </a>
            </div>
        </div>
        <div class="relative row-start-1 lg:row-start-auto w-full">
            <img alt="Cover image of featured article"
                 loading="lazy" decoding="async"
                 class="h-fit max-h-96 w-full inset-0 text-transparent object-cover border-2 border-black dark:border-white"
                 src={featuredArticle.data.cover.src} transition:name={`${featuredArticle.id}-image`}>
        </div>
    </div>
</div>