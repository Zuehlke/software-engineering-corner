---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import { dateFormat } from '../lib/date-format.helper';
import { timeToRead } from '../lib/reading-time';
import { featuredArticle } from '../lib/list';
type Props = {
  post: CollectionEntry<'blog'>;
};

const {post} = Astro.props;
---
<a href={post.id} class="article-card rounded-none text-black dark:text-white bg-white dark:bg-zag-dark border-2 border-zag-dark dark:border-white
   hover:bg-zag-dark dark:hover:bg-white hover:text-white dark:hover:text-black transition-colors duration-300
   cursor-pointer group z-0">
    <div class="p-0">
        <div class="article-image relative overflow-hidden h-48">
            <Image src={post.data.cover} alt="Cover image" class="aspect-video object-cover w-full"
                   width="800"
                   height="450"
                   loading="lazy"
            />
        </div>
        <div class="p-4">
            <h4 class="text-sm mb-3 leading-relaxed font-medium text-balance line-clamp-2 h-11">{post.data.title}</h4>
            <div class="space-y-1 text-xs opacity-80">
                <p>By {post.data.author}</p>
                <p>{dateFormat(post.data.released)} â€¢ {timeToRead(post)} min read</p>
            </div>
        </div>
    </div>
</a>
